<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.image.Image?>

<BorderPane fx:controller="controllers.EditController"
            xmlns:fx="http://javafx.com/fxml">
    <top>
        <VBox fx:id="topBar">
            <Label fx:id="sessionTitle"/>
            <HBox spacing="20">
                <Button text="Exit" onAction="#exit"/>
                <Button text="Practice" onAction="#practice"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <HBox styleClass="center">
            <VBox>
                <Label styleClass="title" text="List of all parts of speech"/>
                <TilePane fx:id="posList"/>
            </VBox>
            <VBox>
                <Label styleClass="title" text="List of all words"/>
                <TilePane fx:id="wordList"/>
            </VBox>
        </HBox>
    </center>
</BorderPane>