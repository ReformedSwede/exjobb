<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.layout.TilePane?>
<BorderPane fx:controller="controllers.PracticeController"
            xmlns:fx="http://javafx.com/fxml" prefHeight="400" prefWidth="700">
        <top>
            <HBox fx:id="topBar">
                <Button text="Exit session" onAction="#exitSession"/>
                <Label fx:id="sessionTitle"/>
            </HBox>
        </top>
        <center>
            <VBox fx:id="practice">
                <Label fx:id="foreignWordLbl" text="λόγος"/>

                <TextField fx:id="inputFld" promptText="Write something..." onKeyPressed="#submit"/>

                <Label fx:id="infoLbl" text="Extra information is shown here"/>

                <ImageView fx:id="imageView"/>
            </VBox>
        </center>
    </BorderPane>