<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.image.Image?>
<BorderPane fx:controller="controllers.PracticeController"
            xmlns:fx="http://javafx.com/fxml">
        <top>
            <HBox fx:id="topBar">
                <Button text="Edit session" onAction="#editSession"/>
                <Label fx:id="sessionTitle"/>
                <ImageView fx:id="exit">
                    <image>
                        <Image url="/resources/images/exit.png" backgroundLoading="true"/>
                    </image>
                </ImageView>
            </HBox>
        </top>
        <center>
            <VBox>
                <Label fx:id="foreignWordLbl" text="λόγος"/>

                <TextField fx:id="inputFld" promptText="Write something..." onKeyPressed="#submit"/>

                <Label fx:id="infoLbl" text="Extra information is shown here"/>

                <ImageView fx:id="imageView"/>
            </VBox>
        </center>
    </BorderPane>