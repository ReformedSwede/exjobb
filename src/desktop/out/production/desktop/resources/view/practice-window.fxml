<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.image.Image?>

<BorderPane fx:controller="controllers.PracticeController"
            xmlns:fx="http://javafx.com/fxml">
    <top>
        <VBox fx:id="topBar">
            <Label fx:id="sessionTitle"/>
            <HBox spacing="20">
                <Button text="Exit" onAction="#exit"/>
                <Button text="Edit session" onAction="#editSession"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <VBox styleClass="center">
            <Label fx:id="foreignWordLbl" text="λόγος"/>

            <TextField fx:id="inputFld" promptText="Write something..." onKeyPressed="#submit"/>

            <Label fx:id="infoLbl" text="Extra information is shown here"/>

            <ImageView fx:id="imageView"/>
        </VBox>
    </center>
</BorderPane>